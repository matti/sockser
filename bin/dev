#!/usr/bin/env bash
set -euo pipefail

case $1 in
  browser)
    /Applications/Chromium.app/Contents/MacOS/Chromium --proxy-server="socks5://127.0.0.1:1080"
  ;;
  server)
    (
      chisel server -p 8000 --socks5
    ) &

    reflex -s go run main.go
  ;;
  client)
    chisel client 127.0.0.1:8000 "$2:socks"
  ;;
  fallback)
    microsocks -p 2080
  ;;
esac
